# ===========================================
# VARIABLES DE ENTORNO LOCAL
# ===========================================
# Este archivo es para configuraciones específicas del entorno local
# NO se debe subir al repositorio (ya está en .gitignore)

# Configuración de desarrollo local
REACT_APP_DEBUG=true
REACT_APP_LOG_LEVEL=debug

# URLs de desarrollo
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_CDN_URL=http://localhost:3000

# Configuración de EmailJS para desarrollo
# Usa credenciales de prueba o de desarrollo
REACT_APP_EMAILJS_SERVICE_ID=service_dev_xxxxxxx
REACT_APP_EMAILJS_TEMPLATE_ID=template_dev_xxxxxxx
REACT_APP_EMAILJS_PUBLIC_KEY=dev_xxxxxxxxxxxxxxxx

# Analytics de desarrollo (opcional)
REACT_APP_GA_MEASUREMENT_ID=G-DEVXXXXXXXX
REACT_APP_GTM_CONTAINER_ID=GTM-DEVXXXXX

# Configuración de hot reload
FAST_REFRESH=true